class Solution:
    def numRescueBoats(self, people, limit):
        """
        :type people: List[int]
        :type limit: int
        :rtype: int
        """
        people.sort()
        
        i, j =0, len(people)-1
        count = 0
        while i <= j:
            if people[i] + people[j] <= limit:
                i+=1
            j-=1
            count+=1
        return count  
    
 Time : O(NlgN)
 Space : O(1)
